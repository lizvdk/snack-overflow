<div id="question-<%=@question.id %>">
  <div class="row">
    <div class="col-sm-1 voting">
      <%= render partial: 'votes/votes', locals: { votable: @question } %>
    </div>

    <div class="col-sm-10">
      <h1><%= @question.title %></h1>
      <p class="asker">asked by
        <b><%= @question.user.email %></b>
        <small><%= @question.created_at %></small>
      </p>
      <% if @question.description.present? %>
        <blockquote><%= @question.description %></blockquote>
      <% end %>
    </div>
  </div>

  <div id="answers">
    <h3>Answers</h3>
    <% if @answers.present? %>
      <% @answers.each do |answer| %>
        <div id="answer-<%= answer.id %>">
          <p><%= answer.body %></p>
          <p>by <b><%= answer.user.email %></b>
            <small><%= answer.created_at %></small>
          </p>
        </div>
      <% end %>
    <% else %>
      <p> No answers yet. </p>
    <% end %>
  </div>

  <div id="new-answer">
    <% if current_user %>
      <%= simple_form_for [@question, @answer] do |f|%>
        <%= f.error_notification %>

        <%= f.input :body, label: "Answer" %>

        <%= f.submit "Submit answer" %>
      <% end %>
    <% else %>
      <p>Please sign in to answer this question.</p>

    <% end %>
  </div>
</div>
